[data]
    name = "{{ promptStringOnce . "name" "Your full name" }}"
    email = "{{ promptStringOnce . "email" "Your email address" }}"
{{- if eq .chezmoi.os "darwin" }}
    os = "macos"
{{- else }}
    os = "linux"
{{- end }}

# 1Password integration
# Set to true after running: op signin
[onepassword]
    command = "op"
    prompt = true

