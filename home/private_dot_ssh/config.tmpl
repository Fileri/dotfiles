# SSH Configuration

{{- if eq .chezmoi.os "darwin" }}
# 1Password SSH Agent
Host *
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
{{- end }}

# GitHub (using port 443 for networks that block port 22)
Host github.com
    HostName ssh.github.com
    Port 443
    User git

{{- if eq .chezmoi.os "darwin" }}
# GCP ai-console via IAP tunnel
Host ai-console
    HostName ai-console.europe-west1-b.ai-automat-id-play-38355
    ProxyCommand gcloud compute start-iap-tunnel ai-console %p --listen-on-stdin --zone=europe-west1-b --project=ai-automat-id-play-38355
    IdentityFile ~/.ssh/google_compute_engine
    User erik
    UserKnownHostsFile ~/.ssh/google_compute_known_hosts
    HostKeyAlias compute.2528133485698065070
    CheckHostIP no
{{- end }}

