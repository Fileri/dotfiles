# SSH Configuration

{{- if eq .chezmoi.os "darwin" }}
# 1Password SSH Agent
Host *
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
{{- end }}

# GitHub (using port 443 for networks that block port 22)
Host github.com
    HostName ssh.github.com
    Port 443
    User git

{{- if eq .chezmoi.os "darwin" }}
# ai-console via GCloud IAP tunnel
Host ai-console
    User erik
    IdentityFile ~/.ssh/google_compute_engine
    ProxyCommand gcloud compute start-iap-tunnel ai-console 22 --listen-on-stdin --zone=europe-west1-b --project=ai-automat-id-play-38355
{{- end }}

